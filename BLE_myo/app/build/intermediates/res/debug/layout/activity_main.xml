<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/MyoListView"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/emgDataTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gesture"
        android:id="@+id/gestureTextView"
        android:textSize="12dp"
        android:layout_below="@+id/MyoListView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Myo Status"
        android:id="@+id/emgDataTextView"
        android:textSize="10dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_below="@+id/bFindMyo" />

    <Button
        android:text="Find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFindMyo"
        android:onClick="onClickFindMyo"
        android:layout_toEndOf="@+id/bEMG" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConnect"
        android:layout_alignBottom="@+id/textServerIP"
        android:layout_toEndOf="@+id/textServerIP"
        android:onClick="onConnectTCP" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="128.97.92.37:8888"
        android:ems="10"
        android:id="@+id/textServerIP"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerBodyPart"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bFindMyo"
        app:spinnerMode="dropdown" />

    <TextView
        android:text="Server OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewConnectStatus"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnConnect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/bEMG"
        android:onClick="onClickEMG"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.echo.holographlibrary.LineGraph
        android:id="@+id/holo_graph_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/gestureTextView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
